<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="250dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/categoriesRecyclerCategoriesImageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/categoriesRecyclerCategoriesNameTextView"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="#80FFFFFF"
            android:text="Selam DÃ¼nya"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="@id/categoriesRecyclerCategoriesImageView"
            app:layout_constraintBottom_toBottomOf="@id/categoriesRecyclerCategoriesImageView"
            app:layout_constraintEnd_toEndOf="@id/categoriesRecyclerCategoriesImageView"
            app:layout_constraintStart_toStartOf="@id/categoriesRecyclerCategoriesImageView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>